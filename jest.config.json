{
  "preset": "ts-jest",
  "collectCoverage": true,
  "coverageProvider": "v8",
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "reporters": [
    ["github-actions", { "silent": false }],
    "summary",
    [
      "jest-junit",
      {
        "outputDirectory": ".jest-results"
      }
    ]
  ]
}
